		// "interval":
		// "restart-interval":
		// "signal":
		"format": "{}",
		// "format-icons":
		// "rotate":
		"min-length": 4,
		"max-length": 4,
		"on-click": "~/.config/waybar/scripts/theme-switcher.sh next",
		// "on-click-middle":
		"on-click-right": "~/.config/waybar/scripts/theme-switcher.sh prev"
		// "on-scroll-up":
		// "on-scroll-down":
		// "smooth-scrolling-threshold":
		// "tooltip":
		// "tooltip-format":
		// "escape":
	},

	"custom/user": {
		"exec": "id --user --name",
